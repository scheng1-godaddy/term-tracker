<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.mentor_activities.MentorDetailActivity">

    <TextView
        android:id="@+id/mentor_detail_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/mentor_add_phone_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mentor_detail_name"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mentor_detail_phone_label"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="Phone: "
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mentor_detail_phone_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="phone"
            android:paddingRight="20dp"
            android:text="Enter Phone"
            android:textColor="#000"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mentor_detail_email_row"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/mentor_add_phone_row"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mentor_detail_email_label"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="Email:"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mentor_detail_email_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textEmailAddress"
            android:paddingRight="20dp"
            android:text="Enter email"
            android:textColor="#000"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/mentor_detail_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mentor_detail_email_row"
        android:onClick="editButtonHandler"
        android:text="Edit" />

    <Button
        android:id="@+id/mentor_detail_delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mentor_detail_edit_button"
        android:onClick="deleteButtonHandler"
        android:text="Delete" />


</RelativeLayout>