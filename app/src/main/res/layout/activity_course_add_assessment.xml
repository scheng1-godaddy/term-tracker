<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.course_activities.CourseAddAssessmentActivity">

    <Button
        android:id="@+id/course_add_assessment_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="addAssessmentButtonHandler"
        android:text="Add assessment to course" />

    <TextView
        android:id="@+id/course_add_assessment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/course_add_assessment_add_button"
        android:text="Course Assessments:"
        android:textColor="#000"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/list_view_course_add_assessments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_add_assessment_label"
        android:layout_margin="10dp" />
</RelativeLayout>